<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h3 class="text text-center p-2">Agregar un Taller</h3>
            <div class="card">
                <div class="card-body">
                    <form action="/workshop/add" method="POST">
                    <div class="form-group p-2">
                        <input type="text" class="form-control" name="tittle" placeholder="Titulo" autofocus>
                    </div>
                    <div class="form-group p-2">
                        <input type="text" class="form-control" name="address" placeholder="Dirección">
                    </div>
                    <div class="form-group p-2">
                        <textarea name="description" rows="2" class="form-control" placeholder="Descripción"></textarea>
                    </div>
                    <dv class="form-group">
                        <button class="btn btn-success btn-block">
                            Guardar
                        </button>
                    </dv>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>