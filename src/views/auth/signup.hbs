<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
             <div class="img-login">
             <img src="/img/bicicleta.png" alt="logo" class="card-img-top mx-auto m-2 img-log">
            </div>
            <h5 class="text text-center">Registrate en BikeTools</h5>
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrar</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                    
                    <div class="form-group p-2">
                        <label for="fullname" class="labels">Nombre completo</label>
                        <input type="text" name="fullname" placeholder="Nombre completo" class="form-control" autofocus required>
                    </div>
                    <div class="form-group p-2">
                        <label for="username" class="labels">Nombre de usuario</label>
                        <input type="text" name="username" placeholder="Ingrese un usuario" class="form-control" required>
                    </div>
                      <div class="form-group p-2">
                        <label for="id_cd" class="labels">Cédula</label>
                        <input type="number" name="id_cd" placeholder="Ingrese su cedula" class="form-control" required>
                    </div>

                     <div class="form-group p-2">
                        <label for="email" class="labels">Correo</label>
                        <input type="email" name="email" placeholder="Ingrese su correo" class="form-control" required>
                    </div>
                    
                    <div class="form-group p-2">
                        <label for="password" class="labels">Contraseña</label>
                        <input type="password" name="password" placeholder="Ingrese una contraseña" class="form-control" required>
                    </div>
                     <div class="form-group p-2">
                       <button class="btn btn-success btn-block btn-add"><i class="fa-solid fa-arrow-right-to-bracket"></i>Registrar</button>
                    </div>
                    </form>
                </div>
            </div>
            <div class="card text-center mt-4 cart-mobile">
                <div class="card-body cart-mobile-2">
                    <p>Ya tienes una cuenta?</p><a href="/login">
                         Ingresa aquí   
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>